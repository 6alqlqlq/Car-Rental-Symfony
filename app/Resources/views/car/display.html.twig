{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-12">
                <div id="custom-search-input">
                    <div class="input-group">

                        <input type="text" class="search-query form-control" placeholder="Search"/>
                        <span class="input-group-btn">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>

                    </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 50px">
        <div class="row">
            <div class="col-lg-2">
                <div class="list-group">

                    <a href="#" class="list-group-item">Order By Brand</a>
                </div>
                <div class="list-group">
                    <a href="#" class="list-group-item">Order By Model</a>
                </div>
            </div>

            <div class="col-lg-10">
                <div class="row">
                    {% for car in car %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100" style="border: solid thin whitesmoke">
                                <a href="#"><img class="card-img-top" src="{{ asset('uploads/rentals/' ~ car.image) }}" alt="{{ car.image }}"></a>

                                <div class="card-body">
                                    <div class="col-md-12">
                                        <strong>Brand :{{ car.carBrand }}</strong>
                                    </div>
                                    <div class="col-md-12">
                                        <strong> Model :{{ car.carModel }}</strong>
                                    </div>
                                    <div class="col-md-12">
                                    <br>
                                        <p>Year: {{ car.year }}</p>
                                    </div>
                                    <div class="col-md-12">
                                        <p>Engine: {{ car.capacity }}</p>
                                    </div>

                                    <div class="col-md-12">
                                        <p>Gearbox: {{ car.gearbox }}</p>
                                    </div>
                                    <div class="col-md-12">
                                        <p>{{ car.price }} $/Day</p>
                                    </div>
                                    <div class="col-md-12">
                                        <small>Published: {% if car.createdAt %}{{ car.createdAt|date('Y-m-d H:i:s') }}{% endif %}</small>
                                        <a href="{{ path('user_rent', { 'id': car.id }) }}" class="btn btn-primary">Book Now</a>
                                        <a href="" class="btn btn-primary">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div><
    </div>

{% endblock %}

