{% extends 'base.html.twig' %}

{% block main %}
    <div class="container" style="margin-top: 100px; margin-bottom: 66px;" xmlns="http://www.w3.org/1999/html">
        <div class="row">
            <div class="col-md-3 ">
                <div class="list-group ">
                    <a href="{{ path('user_profile') }}" class="list-group-item list-group-item-action">Profile</a>
                    <a href="{{ path('user_edit_profile') }}" class="list-group-item list-group-item-action active">Edit Profile</a>
                    <a href="{{ path('my_orders') }}" class="list-group-item list-group-item-action">My Rents</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Edit Profile</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form class="form-horizontal" enctype="multipart/form-data"
                                      action="{{ path('user_edit_profile') }}" method="post">
                                    <fieldset>
                                        <div class="form-group row">
                                            <label for="user_email" class="col-4 col-form-label">User Name:</label>
                                            <div class="col-8">
                                                <input class="form-control" id="user_email" placeholder="Email"
                                                       name="user[email]" required
                                                       type="email" value="{{ user.email }}">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="user_firstName" class="col-4 col-form-label">First Name:</label>
                                            <div class="col-8">
                                                <input type="text" class="form-control" id="user_firstName"
                                                       name="user[firstName]" value="{{ user.firstName }}" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="user_lastName" class="col-4 col-form-label">Last Name:</label>
                                            <div class="col-8">
                                                <input type="text" class="form-control" id="user_lastName"
                                                       name="user[lastName]" value="{{ user.lastName }}" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <a id="changePass" class="btn btn-danger btn-sm">Change password</a>
                                            <div id="pass"></div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Edit</button>

                                        {{ form_row(form._token) }}
                                    </fieldset>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#changePass').click(function () {
            $('#pass').empty();
            let form =
                `
                    <div class="form-group row">
                        <label class="col-4 col-form-label" for="user_password_first">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="user_password_first" placeholder="Password" name="user[password][first]" >
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-4 col-form-label" for="user_password_second">Confirm Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="user_password_second" placeholder="Password" name="user[password][second]" >
                        </div>
                    </div>

            `;
            $('#pass').append(form);
            $('#pass').toggle();

        })
    </script>
{% endblock %}



