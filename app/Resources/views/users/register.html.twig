{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height:94vh">
            <div class="col-6">
                <div class="card">
                    <div class="card-header"> Register</div>
                    <div class="card-body">
                        <form class="form-horizontal" action="{{ path('user_register') }}" method="post">
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="user_email">Email</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="user_email" placeholder="Email"
                                           name="user[email]" required
                                           type="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="user_firstName">First Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="user_firstName" placeholder="Full Name"
                                           name="user[firstName]" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="user_lastName">Last Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="user_lastName" placeholder="Full Name"
                                           name="user[lastName]" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="user_plainPassword_first">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="user_plainPassword_first"
                                           placeholder="Password" name="user[plainPassword][first]" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="user_plainPassword_second">Confirm
                                    Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="user_plainPassword_second"
                                           placeholder="Password" name="user[plainPassword][second]" required>
                                </div>
                            </div>
                            <label class="col-sm-3 control-label" for="user_plainPassword_second">Accept Terms</label>
                            {{ form_widget(form.termsAccepted) }}

                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-4">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </div>
                            </div>

                            {{ form_row(form._token) }}

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
