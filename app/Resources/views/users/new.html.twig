{% extends 'dashboard.html.twig' %}

{% block body %}
    <h1>Car creation</h1>
    <form class="form-horizontal" action="{{ path('user_new') }}" method="POST">
        <div class="form-group">
            <label class="col-sm-4 control-label" for="user_email">Email</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="user_email"
                       name="user[email]" required="required" maxlength="255" placeholder="Enter Email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="user_firstName">First name </label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="user_firstName"
                       name="user[firstName]" required="required" maxlength="255" placeholder="Enter first name">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="user_lastName">Last name</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="user_lastName"
                       name="user[lastName]" required="required" >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="user_plainPassword_first">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="user_plainPassword_first"
                       placeholder="Password" name="user[plainPassword][first]" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label" for="user_plainPassword_second">Confirm
                Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="user_plainPassword_second"
                       placeholder="Password" name="user[plainPassword][second]" required>
            </div>
        </div>
        <div class="form-group">
        <label class="col-sm-3 control-label" for="user_plainPassword_second">Accept Terms</label>

        {{ form_widget(form.termsAccepted) }}
        </div>
        {{ form_row(form._token) }}
        <input class="btn btn-primary" type="submit" value="Create"/>

        <a class="btn btn-primary float-right" href="{{ path('car_index') }}">Back to the list</a>

    </form>
{% endblock %}