{% extends 'base.html.twig' %}

{% block body %}
    < <div class="container" style="margin-top: 100px; margin-bottom: 66px;">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group ">
                <a href="{{ path('user_profile') }}" class="list-group-item list-group-item-action ">Profile</a>
                <a href="{{ path('user_edit_profile') }}" class="list-group-item list-group-item-action">Edit Profile</a>
                <a href="{{ path('my_orders') }}" class="list-group-item list-group-item-action active">My Rents</a>

            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>My Rents</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                                <div class="d-flex align-items-center justify-content-center p-3 py-5 mb-2 bg-light rounded" style="font-size: 10em;">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                                    </svg>
                                </div>
            {% for orders in orders %}
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Car Id</th>
                            <th scope="col">Pick up date</th>
                            <th scope="col">Return date</th>

                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">{{ orders.id }}</th>
                           <td><a href="{{ path('single_car_show',{ 'id':orders.carid }) }}"> {{ orders.carid }} [Click to view]</a></td>
                            <td>{{ orders.pickUpDate|date }}</td>
                            <td>{{ orders.returnDate|date }}</td>

                        </tr>

                        </tbody>
                    </table>


                </div>
            {% endfor %}
        </div>
    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
